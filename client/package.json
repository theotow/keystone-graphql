{
  "name": "react-seed",
  "version": "0.0.16",
  "description": "Seed project for React apps using ES6 & webpack.",
  "repository": "https://github.com/badsyntax/react-seed",
  "license": "MIT",
  "config": {
    "buildDir": "./build",
    "buildDirTests": "./build_tests",
    "devHost": "localhost",
    "devPort": 8000
  },
  "scripts": {
    "build": "NODE_ENV=production npm run webpack",
    "clean": "rimraf $npm_package_config_buildDir && mkdir $npm_package_config_buildDir",
    "env": "env",
    "lint": "./node_modules/eslint/bin/eslint.js --ext .js --ext .jsx ./app ./webpack && echo No linting errors. || true",
    "prebuild": "npm run clean",
    "prestart": "npm install",
    "pretest": "npm install && npm run lint",
    "pretest-travis": "npm install && npm run lint",
    "start": "NODE_ENV=development node dev-server ./webpack/config",
    "serve": "NODE_ENV=development node dev-server ./webpack/config",
    "test": "NODE_ENV=test karma start",
    "tests": "NODE_ENV=test karma start",
    "test-travis": "NODE_ENV=test karma start --single-run",
    "webpack": "webpack --colors --progress --config ./webpack/config"
  },
  "dependencies": {
    "apollo-client": "^0.4.13",
    "classnames": "^2.1.3",
    "firebase": "^3.3.0",
    "flux": "^2.0.3",
    "history": "^1.13.1",
    "isomorphic-fetch": "^2.2.0",
    "lodash": "^3.10.1",
    "react": "^0.14.3",
    "react-apollo": "^0.4.7",
    "react-dom": "^0.14.3",
    "react-redux": "^4.0.0",
    "react-router": "^1.0.0",
    "react-timeago": "^2.2.1",
    "redux": "^3.0.4",
    "redux-localstorage": "^0.4.0",
    "redux-logger": "^2.0.4",
    "redux-promise": "^0.5.0",
    "redux-thunk": "^1.0.0"
  },
  "devDependencies": {
    "autoprefixer-core": "^5.2.1",
    "babel-core": "^5.8.3",
    "babel-eslint": "^3.1.23",
    "babel-loader": "^5.3.1",
    "babel-plugin-rewire": "^0.1.8",
    "babel-runtime": "^5.6.15",
    "bower": "^1.6.9",
    "chai": "^3.0.0",
    "css-loader": "^0.15.2",
    "eslint": "^1.6.0",
    "eslint-friendly-formatter": "^1.2.2",
    "eslint-loader": "^1.1.1",
    "eslint-plugin-react": "^2.6.4",
    "extract-text-webpack-plugin": "^0.8.2",
    "file-loader": "^0.8.4",
    "glob": "^5.0.13",
    "html-loader": "^0.3.0",
    "json-loader": "^0.5.2",
    "karma": "^0.13.2",
    "karma-chrome-launcher": "^0.2.0",
    "karma-cli": "0.1.0",
    "karma-mocha": "^0.2.0",
    "karma-mocha-reporter": "^1.0.2",
    "karma-phantomjs-launcher": "^0.2.0",
    "karma-sinon": "^1.0.4",
    "karma-source-map-support": "^1.0.0",
    "karma-sourcemap-loader": "^0.3.5",
    "karma-webpack": "^1.5.1",
    "lodash": "^3.10.0",
    "mocha": "^2.2.5",
    "mocha-loader": "^0.7.1",
    "node-libs-browser": "^0.5.2",
    "node-sass": "^3.2.0",
    "normalize.css": "^3.0.3",
    "opn": "^3.0.2",
    "phantomjs": "^1.9.17",
    "postcss-css-variables": "^0.5.1",
    "postcss-loader": "^0.8.0",
    "precss": "^1.3.0",
    "react-addons-test-utils": "^0.14.3",
    "react-hot-loader": "^1.2.8",
    "rimraf": "^2.4.1",
    "sass-loader": "^1.0.2",
    "sinon": "^1.15.4",
    "source-map-support": "^0.3.2",
    "style-loader": "^0.12.3",
    "template-html-loader": "0.0.3",
    "url-loader": "^0.5.7",
    "webpack": "^1.10.1",
    "webpack-dev-server": "^1.10.1"
  },
  "engines": {
    "node": ">=0.12.0"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "node": true,
      "es6": true
    },
    "ecmaFeatures": {
      "modules": true,
      "jsx": true
    },
    "globals": {
      "describe": true,
      "it": true,
      "sinon": true
    },
    "parser": "babel-eslint",
    "plugins": [
      "react"
    ],
    "rules": {
      "strict": [
        2,
        "global"
      ],
      "indent": [
        2,
        2
      ],
      "quotes": [
        2,
        "single"
      ],
      "no-alert": 2,
      "no-underscore-dangle": 2,
      "react/display-name": 2,
      "react/jsx-quotes": 2,
      "react/jsx-no-undef": 2,
      "react/jsx-sort-props": 2,
      "react/jsx-uses-react": 2,
      "react/jsx-uses-vars": 2,
      "react/no-did-mount-set-state": 2,
      "react/no-did-update-set-state": 2,
      "react/no-multi-comp": 2,
      "react/no-unknown-property": 2,
      "react/prop-types": 2,
      "react/react-in-jsx-scope": 2,
      "react/self-closing-comp": 2,
      "react/wrap-multilines": 2
    }
  }
}
